<!--miniprogram/pages/index/index.wxml-->
<view class="index">
  <!-- 页顶轮播 -->
  <swiper class="index-swiper" indicator-dots="{{true}}" autoplay="{{autoplay}}" interval="{{interval}}"
    duration="{{duration}}" circular="{{true}}">
    <block wx:for="{{slideImages}}" wx:key="*this">
      <swiper-item>
        <image src="{{item}}" class="slide-image" width="355" height="150" mode="widthFix"></image>
      </swiper-item>
    </block>
  </swiper>

  <view class="index-tab">
    <view bindtap="changeStatus" class="{{activeness.reference?'active':''}}" id="0">参考案例</view>
    <view bindtap="changeStatus" class="{{activeness.actual?'active':''}}" id="1">实际案例</view>
  </view>
  
  <!-- 参考项目展示 -->
  <view wx:if="{{activeness.reference}}">
    <project-list canDelete="{{false}}" imageData="{{referenceImageData}}" isCase="{{true}}" />
  </view>
  <!-- 实际案例 -->
  <view wx:else>
    <project-list canDelete="{{false}}" imageData="{{imageData}}" isCase="{{true}}" />
  </view>

  <!-- footer -->
  <view class="footer weui-footer weui-footer_fixed-bottom">
    <view class="weui-footer__links">
      <a href="javascript:home();" class="weui-footer__link">微新</a>
    </view>
    <view class="weui-footer__text">Copyright &copy; 2019-2021 城市“微新”团队</view>
  </view>
</view>