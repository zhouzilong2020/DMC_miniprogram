<!--miniprogram/pages/index/index.wxml-->
<view class="index">
  <!-- 页顶轮播 -->
  <carousel>
    <view style="width: 100%; background: #d1d1d1; min-height: 100px"></view>
  </carousel>
  <view class="main">
    <tab-group bindonTabChange="onTabChange" id="tab-group" box-class="tabs"></tab-group>
    <!-- 示范项目 -->
    <view wx-if="{{curTabIdx == 0}}" class="container projects">
      <project-item wx:for="{{[1,2,3,4]}}"></project-item>
    </view>
    <!-- 新闻 -->
    <view wx-if="{{curTabIdx == 1}}" class="container row-item">
      <news wx:for="{{[1,2]}}"></news>
    </view>
    <!-- 设计师 -->
    <view wx-if="{{curTabIdx == 2}}" class="container designers">
      <designer-item wx:for="{{[1,2,3,4]}}"></designer-item>
    </view>


    <!-- 文章详情 -->
    <view class="container row-item">
      <article></article>
    </view>
    <!-- 投票消息 -->
    <view class="container row-item">
      <message wx:for="{{[1,2]}}"></message>
    </view>
    <!-- 我的项目 -->
    <view class="container row-item">
      <my-project wx:for="{{[1,2]}}"></my-project>
    </view>
  </view>

  <!-- footer -->
  <view class="footer weui-footer weui-footer_fixed-bottom">
    <view class="weui-footer__links">
      <a href="javascript:home();" class="weui-footer__link">微新</a>
    </view>
    <view class="weui-footer__text">Copyright &copy; 2019-2021 城市“微新”团队</view>
  </view>
</view>