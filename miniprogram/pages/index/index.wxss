/* miniprogram/pages/index/index.wxss */
.index {
  background: #EEEEEE;
}


.main {
  background: #FDFDFD;
  border-radius: 47rpx;
  background: rgba(253, 253, 253, 100);
  box-shadow: 0 4rpx 11rpx 0 rgba(230, 230, 230, 40);
  position: relative;
  bottom: 47rpx;
}

.tabs {
  border-radius: 47rpx 47rpx 0 0;
  padding: 22rpx 54rpx 0;
  box-sizing: border-box;
}

.container {
  border-radius: 0 0 47rpx 47rpx;
  display: grid;

}

.container.projects {
  padding: 29rpx 25rpx 51rpx;
  grid-template-columns: repeat(2, 1fr);
  column-gap: 13rpx;
  row-gap: 18rpx;
}

.container.designers{
  padding: 22rpx 40rpx 51rpx;
  grid-template-columns: repeat(2, 1fr);
  column-gap: 18rpx;
  row-gap: 25rpx;
}

.footer {
  position: relative;
}