/* components/vote-item/vote-item.wxss */
.vote-item{
  padding: 27rpx 42rpx;
  border-radius: 18rpx;
  position: relative;
  background: white;
  box-shadow: 0px 2px 1px 0px rgba(184, 184, 184, 0.3);
  display: flex;
  flex-direction: column;
}

.vote-item::before {
  content: "待完成";
  position: absolute;
  right: 0;
  top: 0;
  padding: 9rpx 14rpx;
  border-radius: 0 18rpx;
  background: rgb(12, 177, 255);
  font-size: 22rpx;
  color:white;
}

.vote-item.is-finish::before{
  content: "已完成";
  background: #CCCCCC;
}