/* components/project-state-panel.wxss */
.project-state-panel {
  border-radius: 36rpx;
  background: white;
  box-shadow: 0 7rpx 11rpx 0 rgba(184, 184, 184, 0.3);
  display: flex;
  flex-direction: column;
}

.image {
  width: 100%;
  position: relative;
  color: white;
  background: url('https://ss3.bdstatic.com/70cFv8Sh_Q1YnxGkpoWK1HF6hhy/it/u=3026939796,485761977&fm=26&gp=0.jpg');
}

.nav {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 118rpx;
  font-size: 0;
}

.nav .finish {
  background: rgb(16, 145, 5);
  border-radius: 36rpx 36rpx 0 0;
  font-size: 33rpx;
  font-weight: bold;
  color: white;
  width: 100%;
  height: 100%;
  line-height: 118rpx;
  text-align: center;
}

.content {
  display: grid;
  grid-template-columns: auto 1fr;
  row-gap: 25rpx;
  column-gap: 31rpx;
  padding: 20rpx 34rpx 27rpx;
}

.project-state{
  display: flex;
  flex-direction: column;
  align-items: center;
}