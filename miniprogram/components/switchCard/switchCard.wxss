/* components/switchCard/switchCard.wxss */
.container {
  height: 100%;
  overflow: hidden;
}

page {
  height: 100%;
  overflow: hidden;
}

.card {
  width: 600rpx;
  height: 960rpx;
  box-sizing: border-box;
  background-color: white;
  text-align: center;
  box-shadow: 2px 2px 8px #aaa;
  border-radius: 10rpx;
}

.card .name {
  font-size: 35px;
  font-weight: bolder;
  margin: 20rpx 0 20rpx;
}

.card .location {
  font-size: 16px;
  margin: 10rpx 0 10rpx;
}

.card .img {
  width: 78%;
  height: 72%;
  margin: 0 0 0;
}

.school-sign-img {
  width: 280rpx;
  height: 440rpx;
  position: absolute;
  left: 320rpx;
  top: 360rpx;
}

.allLikeView {
  width: 100rpx;
  height: 100rpx;
  box-sizing: border-box;
  background-color: white;
  padding: 30rpx;
  box-shadow: 0px 2px 8px #aaa;
  border-radius: 50rpx;
  margin: 800rpx;
}

.allLikeView .all-like-img {
  width: 40rpx;
  height: 40rpx;
}