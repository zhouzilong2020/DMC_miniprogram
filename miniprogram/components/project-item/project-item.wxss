/* components/project-item.wxss */
.project-item {
  padding: 9rpx 13rpx 22rpx;
  border-radius: 27rpx;
  background: white;
  box-shadow: 0px 2px 1px 0px rgba(184, 184, 184, 0.3);
  display: flex;
  flex-direction: column;
}

.image {
  height: 219rpx;
  width: 100%;
  border-radius: 27rpx;
  position: relative;
  color: white;
}

.image::before {
  content: attr(data-type);
  position: absolute;
  right: 0;
  top: 0;
  padding: 9rpx 14rpx;
  border-radius: 0 18rpx;
  background: rgb(12, 177, 255);
  font-size: 22rpx;
}

.image .heat {
  position: absolute;
  left: 14rpx;
  top: 14rpx;
  display: flex;
  align-items: center;
}

.title {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin: 14rpx 0;
}