/* components/project.wxss */
.list {
  padding: 16px 14px 28px;
  border-radius: 0 0 26px 26px;
  display: grid;
  grid-template-columns: repeat(2, calc(50% - 3.5px));
  column-gap: 7px;
  row-gap: 10px;
}

.list-item {
  padding: 5px 7px 5px 6px;
  border-radius: 15px;
  background: white;
  box-shadow: 0px 2px 6px 0px rgba(0, 0, 0, 0.4);
  display: flex;
  flex-direction: column;
}

.image {
  width: 90%;
  height: 300rpx;
  margin: 0 auto;
  display: block;
  border-radius: 10rpx;
  overflow: hidden;
}

.list-text {
  width: 90%;
  display: flex;
  justify-content: space-between;
  margin: 0 auto;
}