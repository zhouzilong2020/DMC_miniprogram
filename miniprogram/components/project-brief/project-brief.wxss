.image{
  border-radius: 18rpx;
  height: 0;
  padding-top: 55.56%;
  width: 100%;
  position: relative;
  display: block;
}

.image .heat {
  position: absolute;
  left: 0;
  top: 0;
  border-radius: 18rpx 0 18rpx 0;
  background: rgba(0, 0, 0, 0.3);
  padding: 9rpx;
  display: flex;
  align-items: center;
}

.title{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}